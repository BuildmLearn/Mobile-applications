<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res/com.example.labelthediagram">

    <RelativeLayout
        android:id="@+id/scoreTab"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/tab_color" >

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/appBg_color" />

        <com.buildmlearn.labeldiagram.widget.CustomFontManager
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/scoreTxt"
            android:layout_alignBottom="@+id/scoreTxt"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/scoreTxt"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffff"
            app:typeface="roboto_thin" />

        <com.buildmlearn.labeldiagram.widget.CustomFontManager
            android:id="@+id/complete_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/complatedTxt"
            android:layout_alignBottom="@+id/complatedTxt"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/complatedTxt"
            android:text=" 0%"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffff"
            app:typeface="roboto_thin" />

        <com.buildmlearn.labeldiagram.widget.CustomFontManager
            android:id="@+id/complatedTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="Complete :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffff" 
            app:typeface="roboto_thin"/>

        <com.buildmlearn.labeldiagram.widget.CustomFontManager
            android:id="@+id/scoreTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/complete_ratio"
            android:layout_alignBottom="@+id/complete_ratio"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/view1"
            android:text="Score   :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffff" 
            app:typeface="roboto_thin"/>
        
    </RelativeLayout>

    <ImageView
        android:id="@+id/mainDiagramDryCell"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_below="@+id/scoreTab"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/dry_cell" />

    <ImageView
        android:id="@+id/tagHolder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:src="@drawable/holder" />
    
    <ImageView
        android:id="@+id/posTerminalBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/mainDiagramDryCell"
        android:layout_alignStart="@+id/mainDiagramDryCell"
        android:layout_alignTop="@+id/mainDiagramDryCell"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/marker_white" />
    
    <ImageView
        android:id="@+id/chemPasteBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@+id/mainDiagramDryCell"
        android:layout_alignEnd="@+id/mainDiagramDryCell"
        android:layout_alignTop="@+id/mainDiagramDryCell"
        android:layout_marginRight="82dp"
        android:layout_marginEnd="82dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/marker_white" />
    
    <ImageView
        android:id="@+id/sealBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@+id/mainDiagramDryCell"
        android:layout_alignEnd="@+id/mainDiagramDryCell"
        android:layout_alignTop="@+id/mainDiagramDryCell"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/marker_white" />
    
    <ImageView
        android:id="@+id/cathodeBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@+id/mainDiagramDryCell"
        android:layout_alignEnd="@+id/mainDiagramDryCell"
        android:layout_alignTop="@+id/mainDiagramDryCell"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="132dp"
        android:src="@drawable/marker_white" />
    
    <ImageView
        android:id="@+id/insulatorBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@+id/mainDiagramDryCell"
        android:layout_alignEnd="@+id/mainDiagramDryCell"
        android:layout_alignTop="@+id/mainDiagramDryCell"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="168dp"
        android:src="@drawable/marker_white" />
    
    <ImageView
        android:id="@+id/mJacketBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@+id/mainDiagramDryCell"
        android:layout_alignEnd="@+id/mainDiagramDryCell"
        android:layout_alignBottom="@+id/mainDiagramDryCell"
        android:layout_marginRight="72dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/marker_white" />
    
    <ImageView
        android:id="@+id/negTerminalBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@+id/mainDiagramDryCell"
        android:layout_alignEnd="@+id/mainDiagramDryCell"
        android:layout_alignBottom="@+id/mainDiagramDryCell"
        android:layout_marginRight="152dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/marker_white" />
    
    <ImageView
        android:id="@+id/airSpaceBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/mainDiagramDryCell"
        android:layout_alignStart="@+id/mainDiagramDryCell"
        android:layout_alignTop="@+id/mainDiagramDryCell"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/marker_white" />
    
    <ImageView
        android:id="@+id/anodeBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/mainDiagramDryCell"
        android:layout_alignStart="@+id/mainDiagramDryCell"
        android:layout_alignTop="@+id/mainDiagramDryCell"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="170dp"
        android:src="@drawable/marker_white" />

    <ImageView
