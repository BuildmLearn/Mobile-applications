<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/scoreTab"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/tab_color" >

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/appBg_color" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/scoreTxt"
            android:layout_alignBottom="@+id/scoreTxt"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/scoreTxt"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/complete_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/complatedTxt"
            android:layout_alignBottom="@+id/complatedTxt"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/complatedTxt"
            android:text="0%"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/complatedTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:text="Complete    :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/scoreTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/complete_ratio"
            android:layout_alignBottom="@+id/complete_ratio"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/view1"
            android:text="Score   :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffff" />
        
    </RelativeLayout>

    <ImageView
        android:id="@+id/mainDiagramEar"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_above="@+id/tagHolder"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/scoreTab"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/human_ear" />

    <ImageView
        android:id="@+id/tagHolder"
        android:layout_width="fill_parent"
        android:layout_height="240dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:src="@drawable/holder" />

    <ImageView
        android:id="@+id/malleusBlb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/pinnaBlb"
        android:layout_centerHorizontal="true"
        android:src="@drawable/marker_white" />

    <ImageView
        android:id="@+id/incusBlb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/pinnaBlb"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/malleusBlb"
        android:src="@drawable/marker_white" />

    <ImageView
        android:id="@+id/canalsBlb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/pinnaBlb"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/incusBlb"
        android:src="@drawable/marker_white" />

    <ImageView
        android:id="@+id/earnerveBlb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/canalsBlb"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/canalsBlb"
        android:src="@drawable/marker_white" />

    <ImageView
        android:id="@+id/cochleaBlb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_above="@+id/stapesBlb"
        android:layout_alignLeft="@+id/canalsBlb"
        android:layout_alignRight="@+id/earnerveBlb"
        android:layout_marginBottom="21dp"
        android:src="@drawable/marker_white" />

    <TextView
        android:id="@+id/pinnaTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tagHolder"
        android:layout_alignTop="@+id/tagHolder"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/custom_textview"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="pinna"
        android:textColor="#ffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/cochleaTag"
        android:layout_width="wrap_content"
