<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.buildmlearn.practicehandwriting" >

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:noHistory="true"
        android:theme="@style/ActionBarTheme" >
        <activity
            android:name=".activities.information.SplashActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.selection.LanguageActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_language" >
        </activity>
        <activity
            android:name=".activities.selection.MainMenuActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_main_menu" >
        </activity>
        <activity
            android:name=".activities.information.AboutActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_incomplete" >
        </activity>
        <activity
            android:name=".activities.selection.CharacterSelectionActivity"
            android:label="@string/title_activity_character_selection" >
        </activity>
        <activity
            android:name=".helper.practice.PracticeBaseActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_practice" >
        </activity>
        <activity
            android:name=".activities.selection.WordSelectionActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_word_selection" >
        </activity>
        <activity
            android:name=".activities.practice.TimeTrialResultActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_time_trial_result" >
        </activity>
        <activity
            android:name=".activities.practice.PracticeActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_practice" >
        </activity>
        <activity
            android:name=".activities.practice.FreehandActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_freehand" >
        </activity>
        <activity
            android:name=".activities.practice.TimeTrialActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_time_trial" >
        </activity>
        <activity
            android:name=".activities.information.TutorialActivity"
            android:label="@string/title_activity_tutorial" >
        </activity>
    </application>

</manifest>
