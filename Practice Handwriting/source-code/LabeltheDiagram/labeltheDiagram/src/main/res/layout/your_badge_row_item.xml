<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.labelthediagram"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="3dp" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="1dp"
        android:background="@color/appBg_color"
        android:divider="@color/appBg_color_white"
        android:dividerHeight="0dp" >

        <ImageView
            android:id="@+id/achieved_badge"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/bio" />

        <LinearLayout
            android:id="@+id/innerLayout1"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/achieved_badge"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/achieved_badge"
            android:layout_toRightOf="@+id/achieved_badge"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/achievement_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Master in Biology"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff" />

            <LinearLayout
                android:id="@+id/innerLayout2"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal" >

                <com.buildmlearn.labeldiagram.widget.CustomFontManager
                    android:id="@+id/achievement_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/badge_achieved"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff"
                    app:typeface="roboto_thin" />

                <ImageView
                    android:id="@+id/tick_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/correct_btn" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>