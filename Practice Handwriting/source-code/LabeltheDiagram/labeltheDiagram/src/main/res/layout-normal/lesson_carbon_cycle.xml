<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    

    <ImageView
        android:id="@+id/mainDiagramCarbonCycle"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/carbon_cycle" />

    <ImageView
        android:id="@+id/vehicle_emissionsBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@+id/mainDiagramCarbonCycle"
        android:layout_alignTop="@+id/mainDiagramCarbonCycle"
        android:layout_marginRight="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/three" />

    <ImageView
        android:id="@+id/photosynthesisBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/mainDiagramCarbonCycle"
        android:layout_alignTop="@+id/mainDiagramCarbonCycle"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/one" />

    <ImageView
        android:id="@+id/plant_respirationBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@+id/mainDiagramCarbonCycle"
        android:layout_alignTop="@+id/mainDiagramCarbonCycle"
        android:layout_marginRight="105dp"
        android:layout_marginTop="115dp"
        android:src="@drawable/four" />

    <ImageView
        android:id="@+id/organic_carbonBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/mainDiagramCarbonCycle"
        android:layout_alignTop="@+id/mainDiagramCarbonCycle"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="175dp"
        android:src="@drawable/five" />

    <ImageView
        android:id="@+id/dead_organismsBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/mainDiagramCarbonCycle"
        android:layout_alignLeft="@+id/mainDiagramCarbonCycle"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="117dp"
        android:src="@drawable/six" />

    <ImageView
        android:id="@+id/ocean_uptakeBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/mainDiagramCarbonCycle"
        android:layout_alignRight="@+id/mainDiagramCarbonCycle"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="70dp"
        android:src="@drawable/nine" />

    <ImageView
        android:id="@+id/animal_respirationBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/mainDiagramCarbonCycle"
        android:layout_alignRight="@+id/mainDiagramCarbonCycle"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="92dp"
        android:src="@drawable/eight" />

    <ImageView
        android:id="@+id/sunlightBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/mainDiagramCarbonCycle"
        android:layout_alignTop="@+id/mainDiagramCarbonCycle"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/two" />

    <ImageView
        android:id="@+id/fossilsBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/mainDiagramCarbonCycle"
        android:layout_alignLeft="@+id/mainDiagramCarbonCycle"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="137dp"
        android:src="@drawable/seven" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mainDiagramCarbonCycle"
        android:orientation="vertical" >
        <ListView
            android:id="@+id/lesson_list"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >
        </ListView>
    </LinearLayout>
   

</RelativeLayout>