<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res/com.example.labelthediagram"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/scoreTab"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/tab_color" >

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/appBg_color" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/scoreTxt"
            android:layout_alignBottom="@+id/scoreTxt"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/scoreTxt"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/complete_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/complatedTxt"
            android:layout_alignBottom="@+id/complatedTxt"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/complatedTxt"
            android:text="0%"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/complatedTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:text="Complete    :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/scoreTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/complete_ratio"
            android:layout_alignBottom="@+id/complete_ratio"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/view1"
            android:text="Score   :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffff" />
        
    </RelativeLayout>

    <ImageView
            android:id="@+id/mainDiagramCircuit"
            android:layout_width="450dp"
            android:layout_height="450dp"
            android:layout_below="@+id/scoreTab"
            android:layout_centerHorizontal="true"
            android:src="@drawable/circuit" />

    <ImageView
            android:id="@+id/tagHolder"
            android:layout_width="fill_parent"
            android:layout_height="240dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            android:src="@drawable/holder" />

    <ImageView
            android:id="@+id/capacitorBlb"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/mainDiagramCircuit"
            android:layout_alignTop="@+id/mainDiagramCircuit"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/marker_white" />

    <ImageView
            android:id="@+id/switchBlb"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/mainDiagramCircuit"
            android:layout_alignTop="@+id/mainDiagramCircuit"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/marker_white" />


    <ImageView
            android:id="@+id/batteryBlb"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/mainDiagramCircuit"
            android:layout_alignTop="@+id/mainDiagramCircuit"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="155dp"
            android:src="@drawable/marker_white" />

    <ImageView
            android:id="@+id/currentBlb"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/mainDiagramCircuit"
            android:layout_alignBottom="@+id/mainDiagramCircuit"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="100dp"
            android:src="@drawable/marker_white" />

    <ImageView
            android:id="@+id/resistorBlb"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/mainDiagramCircuit"
            android:layout_alignBottom="@+id/mainDiagramCircuit"
            android:layout_marginLeft="45dp"
