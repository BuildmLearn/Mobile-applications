<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.buildmlearn.practicehandwriting" >

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ActionBarTheme" >
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LanguageActivity"
            android:label="@string/title_activity_language" >
        </activity>
        <activity
            android:name=".MainMenuActivity"
            android:label="@string/title_activity_main_menu" >
        </activity>
        <activity
            android:name=".IncompleteActivity"
            android:label="@string/title_activity_incomplete" >
        </activity>
        <activity
            android:name=".ModeSelectionActivity"
            android:label="@string/title_activity_mode_selection" >
        </activity>
        <activity
            android:name=".CharacterSelectionActivity"
            android:label="@string/title_activity_character_selection" >
        </activity>
        <activity
            android:name=".practice.PracticeActivity"
            android:label="@string/title_activity_practice" >
        </activity>
        <activity
            android:name=".WordSelectionActivity"
            android:label="@string/title_activity_word_selection" >
        </activity>
    </application>

</manifest>
