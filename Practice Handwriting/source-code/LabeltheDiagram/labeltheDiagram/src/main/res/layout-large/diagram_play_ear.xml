    <ImageView
        android:id="@+id/pinnaBlb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/mainDiagramEar"
        android:layout_alignLeft="@+id/mainDiagramEar"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="47dp"
        android:src="@drawable/marker_white" />

    <ImageView
        android:id="@+id/stapesBlb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_above="@+id/earcanalBlb"
        android:layout_toRightOf="@+id/incusBlb"
