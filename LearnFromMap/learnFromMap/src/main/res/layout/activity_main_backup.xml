<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res/org.buildmlearn.learnfrommap"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.buildmlearn.learnfrommap.MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/explore_world_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_nexus" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="7dp"
                android:layout_weight="0.17"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_weight="0.67"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="0.5"
                    android:baselineAligned="false"
                    android:gravity="center" >

                    <LinearLayout
                        android:id="@+id/expore_mode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/custom_tile_color"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="loadMode"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:src="@drawable/globe" />

                        <org.buildmlearn.learnfrommap.helper.TextViewPlus
                            android:id="@+id/sett_tutorial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/explore"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            foo:customFont="Roboto_Light.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/classic_mode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/custom_tile_color"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="loadMode"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:src="@drawable/classic" />

                        <org.buildmlearn.learnfrommap.helper.TextViewPlus
                            android:id="@+id/sett_tutorial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/classic_mode"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            foo:customFont="Roboto_Light.ttf" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0.5"
                    android:baselineAligned="false" >

                    <LinearLayout
                        android:id="@+id/category_mode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/custom_tile_color"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="loadMode"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:src="@drawable/category_mode" />

                        <org.buildmlearn.learnfrommap.helper.TextViewPlus
                            android:id="@+id/sett_tutorial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="@string/category_mode"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            foo:customFont="Roboto_Light.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/settings"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/custom_tile_color"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="loadMode"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:src="@drawable/settings" />

                        <org.buildmlearn.learnfrommap.helper.TextViewPlus
                            android:id="@+id/sett_tutorial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            foo:customFont="Roboto_Light.ttf" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="7dp"
                android:layout_weight="0.16"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>