        android:src="@drawable/marker_white" />

    <ImageView
        android:id="@+id/mainDiagramBacteria"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:layout_above="@+id/tagHolder"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bacteria" />

    <ImageView
        android:id="@+id/flagellumBlb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/mainDiagramBacteria"
        android:layout_alignLeft="@+id/mainDiagramBacteria"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="60dp"
        android:src="@drawable/marker_white" />

    <ImageView
        android:id="@+id/plasmidBlb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/mainDiagramBacteria"
        android:layout_alignLeft="@+id/mainDiagramBacteria"
        android:layout_marginBottom="85dp"
        android:layout_marginLeft="145dp"
        android:src="@drawable/marker_white" />

    <ImageView
        android:id="@+id/innerTagHolder"
        android:layout_width="460dp"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/inner_holder" />

    <TextView
        android:id="@+id/piliTag"
