    <ImageView
        android:id="@+id/eardrumBlb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_above="@+id/stapesBlb"
        android:layout_alignLeft="@+id/malleusBlb"
        android:src="@drawable/marker_white" />

    <ImageView
        android:id="@+id/outerearBlb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/mainDiagramEar"
        android:layout_alignLeft="@+id/mainDiagramEar"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="80dp"
        android:src="@drawable/marker_white" />

    <ImageView
        android:id="@+id/earcanalBlb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_above="@+id/outerearBlb"
        android:layout_toLeftOf="@+id/eardrumBlb"
        android:src="@drawable/marker_white" />

</RelativeLayout>