<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/scoreTab"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/tab_color" >

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/appBg_color" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/scoreTxt"
            android:layout_alignBottom="@+id/scoreTxt"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/scoreTxt"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/complete_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/complatedTxt"
            android:layout_alignBottom="@+id/complatedTxt"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/complatedTxt"
            android:text=" 0%"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/complatedTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="Complete :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/scoreTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/complete_ratio"
            android:layout_alignBottom="@+id/complete_ratio"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/view1"
            android:text="Score   :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffff" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/tagHolder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:src="@drawable/holder" />

    <ImageView
        android:id="@+id/mainDiagramHeart"
        android:layout_width="400dp"
        android:layout_height="295dp"
        android:layout_above="@+id/tagHolder"
        android:layout_alignParentLeft="true"
        android:src="@drawable/carbon_cycle" />

    <ImageView
        android:id="@+id/vehicle_emissionsBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/scoreTab"
        android:layout_marginRight="125dp"
        android:src="@drawable/marker_white" />

    <ImageView
        android:id="@+id/photosynthesisBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/vehicle_emissionsBlb"
        android:layout_marginLeft="9dp"
        android:src="@drawable/marker_white" />

    <ImageView
        android:id="@+id/plant_respirationBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@+id/vehicle_emissionsBlb"
        android:layout_below="@+id/vehicle_emissionsBlb"
        android:layout_marginRight="7dp"
        android:layout_marginTop="89dp"
        android:src="@drawable/marker_white" />

    <ImageView
        android:id="@+id/organic_carbonBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/plant_respirationBlb"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="39dp"
        android:layout_toRightOf="@+id/photosynthesisBlb"
        android:src="@drawable/marker_white" />

    <ImageView
        android:id="@+id/dead_organismsBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/organic_carbonBlb"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@+id/organic_carbonBlb"
        android:src="@drawable/marker_white" />

    <ImageView
        android:id="@+id/ocean_uptakeBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/dead_organismsBlb"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@+id/plant_respirationBlb"
        android:src="@drawable/marker_white" />

    <ImageView
        android:id="@+id/animal_respirationBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/vehicle_emissionsBlb"
        android:layout_below="@+id/ocean_uptakeBlb"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/marker_white" />

    <TextView
        android:id="@+id/fossilsTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/organic_carbonTag"
        android:layout_alignBottom="@+id/organic_carbonTag"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/custom_textview"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="fossils"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/organic_carbonTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/photosynthesisTag"
        android:layout_alignBottom="@+id/photosynthesisTag"
        android:layout_alignLeft="@+id/dead_organismsBlb"
        android:background="@drawable/custom_textview"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="organic carbon"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/animal_respirationTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ocean_uptakeTag"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/organic_carbonTag"
        android:background="@drawable/custom_textview"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="animal respiration"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/ocean_uptakeTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/animal_respirationTag"
        android:layout_below="@+id/photosynthesisTag"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_textview"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="ocean uptake"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/dead_organismsTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sunlightTag"
        android:layout_alignBottom="@+id/sunlightTag"
        android:layout_alignRight="@+id/fossilsTag"
        android:background="@drawable/custom_textview"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="dead organisms"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/sunlightTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/animal_respirationTag"
        android:layout_toLeftOf="@+id/animal_respirationBlb"
        android:background="@drawable/custom_textview"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="sunlight"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/vehicle_emissionsTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/animal_respirationTag"
        android:layout_alignBottom="@+id/animal_respirationTag"
        android:layout_alignLeft="@+id/fossilsBlb"
        android:background="@drawable/custom_textview"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="vehicle emissions"
        android:textColor="#ffff" />

    <ImageView
        android:id="@+id/sunlightBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@+id/photosynthesisTag"
        android:layout_below="@+id/photosynthesisBlb"
        android:src="@drawable/marker_white" />

    <ImageView
        android:id="@+id/fossilsBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_above="@+id/tagHolder"
        android:layout_centerHorizontal="true"
        android:src="@drawable/marker_white" />

    <TextView
        android:id="@+id/photosynthesisTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ocean_uptakeTag"
        android:layout_below="@+id/animal_respirationBlb"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_textview"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="photosynthesis"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/plant_respirationTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animal_respirationTag"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/sunlightTag"
        android:background="@drawable/custom_textview"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="plant respiration"
        android:textColor="#ffff" />

</RelativeLayout>