<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/mainDiagramEye"
        android:layout_width="420dp"
        android:layout_height="420dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/human_eye" />

    <ImageView
        android:id="@+id/opticNerveBlb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/mainDiagramEye"
        android:layout_alignTop="@+id/mainDiagramEye"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="325dp"
        android:src="@drawable/seven" />

    <ImageView
        android:id="@+id/retinaBlb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignRight="@+id/mainDiagramEye"
        android:layout_alignTop="@+id/mainDiagramEye"
        android:layout_marginRight="60dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/ten" />

    <ImageView
        android:id="@+id/ciliaryBodyBlb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/mainDiagramEye"
        android:layout_alignTop="@+id/mainDiagramEye"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/one" />

    <ImageView
        android:id="@+id/lensBlb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/mainDiagramEye"
        android:layout_alignTop="@+id/mainDiagramEye"
        android:layout_marginTop="275dp"
        android:layout_marginLeft="-10dp"
        android:src="@drawable/five" />

    <ImageView
        android:id="@+id/vitreousBlb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/mainDiagramEye"
        android:layout_alignTop="@+id/mainDiagramEye"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="325dp"
        android:layout_centerVertical="true"
        android:src="@drawable/six" />

    
    <ImageView
        android:id="@+id/irisBlb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/mainDiagramEye"
        android:layout_alignTop="@+id/mainDiagramEye"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="125dp"
        android:src="@drawable/two" />

    <ImageView
        android:id="@+id/blindSpotBlb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignRight="@+id/mainDiagramEye"
        android:layout_alignTop="@+id/mainDiagramEye"
        android:layout_marginRight="10dp"
        android:layout_marginTop="205dp"
        android:src="@drawable/eight" />

    <ImageView
        android:id="@+id/foveaBlb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignRight="@+id/mainDiagramEye"
        android:layout_alignTop="@+id/mainDiagramEye"
        android:layout_marginRight="10dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/nine" />

    <ImageView
        android:id="@+id/pupilBlb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/mainDiagramEye"
        android:layout_alignTop="@+id/mainDiagramEye"
        android:layout_marginLeft="-24dp"
        android:layout_marginTop="190dp"
        android:src="@drawable/three" />

    <ImageView
        android:id="@+id/corneaBlb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/mainDiagramEye"
        android:layout_alignTop="@+id/mainDiagramEye"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="235dp"
        android:src="@drawable/four" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mainDiagramEye"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lesson_list"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >
        </ListView>
    </LinearLayout>

</RelativeLayout>