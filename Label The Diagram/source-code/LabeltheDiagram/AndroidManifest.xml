<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.labelthediagram"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.buildmlearn.labeldiagram.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.buildmlearn.labeldiagram.MainMenu"
            android:configChanges="orientation"
            android:label="@string/title_activity_main_menu"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.buildmlearn.labeldiagram.DiagramCategory"
            android:parentActivityName="com.buildmlearn.labeldiagram.MainMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.buildmlearn.labeldiagram.MainMenu" >
            </meta-data>
        </activity>
        <activity
            android:name="com.buildmlearn.labeldiagram.DiagramPlay"
            android:configChanges="orientation"
            android:parentActivityName="com.buildmlearn.labeldiagram.DiagramCategory"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.buildmlearn.labeldiagram.DiagramCategory" >
            </meta-data>
        </activity>
    </application>

</manifest>