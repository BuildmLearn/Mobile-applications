<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/scoreTab"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/tab_color" >

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/appBg_color" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/scoreTxt"
            android:layout_alignBottom="@+id/scoreTxt"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/scoreTxt"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/complete_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/complatedTxt"
            android:layout_alignBottom="@+id/complatedTxt"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/complatedTxt"
            android:text=" 0%"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/complatedTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="Complete :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/scoreTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/complete_ratio"
            android:layout_alignBottom="@+id/complete_ratio"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/view1"
            android:text="Score   :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffff" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/mainDiagramHeart"
        android:layout_width="340dp"
        android:layout_height="300dp"
        android:layout_below="@+id/scoreTab"
        android:layout_centerHorizontal="true"
        android:src="@drawable/lens" />

    <ImageView
        android:id="@+id/tagHolder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:src="@drawable/holder" />

    <ImageView
        android:id="@+id/pinnaBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/mainDiagramHeart"
        android:layout_alignTop="@+id/mainDiagramHeart"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/marker" />

    <ImageView
        android:id="@+id/malleusBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/pinnaBlb"
        android:layout_centerHorizontal="true"
        android:src="@drawable/marker" />

    <ImageView
        android:id="@+id/incusBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/pinnaBlb"
        android:layout_marginLeft="9dp"
        android:layout_toRightOf="@+id/malleusBlb"
        android:src="@drawable/marker" />

    <ImageView
        android:id="@+id/earnerveBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/canalsBlb"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/canalsBlb"
        android:src="@drawable/marker" />

    <ImageView
        android:id="@+id/stapesBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/incusBlb"
        android:src="@drawable/marker" />

    <TextView
        android:id="@+id/pinnaTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mainDiagramHeart"
        android:layout_below="@+id/mainDiagramHeart"
        android:layout_marginTop="55dp"
        android:background="@drawable/custom_textview"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="Pinna"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/cochleaTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/canalsBlb"
        android:layout_alignTop="@+id/eardrumTag"
        android:background="@drawable/custom_textview"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="cochlea"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/eardrumTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ear_canalTag"
        android:layout_alignBottom="@+id/ear_canalTag"
        android:layout_alignRight="@+id/stapesBlb"
        android:background="@drawable/custom_textview"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="eardrum"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/ear_canalTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pinnaTag"
        android:layout_alignBottom="@+id/pinnaTag"
        android:layout_toLeftOf="@+id/eardrumBlb"
        android:background="@drawable/custom_textview"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="convex lens"
        android:textColor="#ffff" />

    <ImageView
        android:id="@+id/eardrumBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_above="@+id/stapesBlb"
        android:layout_alignLeft="@+id/malleusBlb"
        android:src="@drawable/marker" />

    <TextView
        android:id="@+id/incusTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/earnerveTag"
        android:layout_alignBottom="@+id/earnerveTag"
        android:layout_alignLeft="@+id/eardrumTag"
        android:background="@drawable/custom_textview"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="image"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/outerearTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/incusTag"
        android:layout_alignBottom="@+id/incusTag"
        android:layout_alignRight="@+id/cochleaTag"
        android:background="@drawable/custom_textview"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="outer ear"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/canalsTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/stapesTag"
        android:layout_alignBottom="@+id/stapesTag"
        android:layout_toRightOf="@+id/outerearBlb"
        android:background="@drawable/custom_textview"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="canals"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/malleusTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/canalsTag"
        android:layout_below="@+id/ear_canalTag"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_textview"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="malleus"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/earnerveTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stapesTag"
        android:layout_alignLeft="@+id/pinnaTag"
        android:background="@drawable/custom_textview"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="nerve"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/stapesTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/earnerveTag"
        android:layout_below="@+id/malleusTag"
        android:layout_marginTop="14dp"
        android:background="@drawable/custom_textview"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="stapes"
        android:textColor="#ffff" />

    <ImageView
        android:id="@+id/canalsBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_above="@+id/incusBlb"
        android:layout_toRightOf="@+id/incusTag"
        android:src="@drawable/marker" />

    <ImageView
        android:id="@+id/earcanalBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_above="@+id/stapesBlb"
        android:layout_toRightOf="@+id/malleusTag"
        android:src="@drawable/marker" />

    <ImageView
        android:id="@+id/outerearBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/stapesBlb"
        android:src="@drawable/marker" />

    <ImageView
        android:id="@+id/cochleaBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/outerearBlb"
        android:layout_alignLeft="@+id/earnerveBlb"
        android:layout_marginBottom="12dp"
        android:src="@drawable/marker" />

</RelativeLayout>