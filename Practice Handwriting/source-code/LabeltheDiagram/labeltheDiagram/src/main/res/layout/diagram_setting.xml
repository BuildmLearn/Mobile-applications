<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/frame_color"
        android:divider="@color/appBg_color_white"
        android:dividerHeight="0dp" >

        <CheckBox
            android:id="@+id/settingcheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp" />

        <LinearLayout
            android:id="@+id/innerLayout1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="37dp"
            android:layout_toRightOf="@+id/settingIcon"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/settingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />
        </LinearLayout>

        <ImageView
            android:id="@+id/settingIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/settingcheckBox1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="22dp"
            android:src="@drawable/ic_launcher" />

    </RelativeLayout>

</RelativeLayout>
