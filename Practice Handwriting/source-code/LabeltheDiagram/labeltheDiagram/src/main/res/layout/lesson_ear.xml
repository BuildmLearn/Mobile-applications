<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/mainDiagramEar"
        android:layout_width="320dp"
        android:layout_height="300dp"
        android:layout_below="@+id/scoreTab"
        android:layout_centerHorizontal="true"
        android:src="@drawable/human_ear" />

    <ImageView
        android:id="@+id/pinnaBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/mainDiagramEar"
        android:layout_alignTop="@+id/mainDiagramEar"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/one" />

    <ImageView
        android:id="@+id/malleusBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/pinnaBlb"
        android:layout_centerHorizontal="true"
        android:src="@drawable/two" />

    <ImageView
        android:id="@+id/incusBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@id/mainDiagramEar"
        android:layout_alignTop="@id/mainDiagramEar"
        android:layout_marginRight="115dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/three" />

    <ImageView
        android:id="@+id/earnerveBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@id/mainDiagramEar"
        android:layout_alignTop="@id/mainDiagramEar"
        android:layout_marginRight="15dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/five" />

    <ImageView
        android:id="@+id/stapesBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@id/mainDiagramEar"
        android:layout_alignLeft="@id/mainDiagramEar"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="207dp"
        android:src="@drawable/seven" />

    <ImageView
        android:id="@+id/earcanalBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/mainDiagramEar"
        android:layout_alignLeft="@id/mainDiagramEar"
        android:layout_marginBottom="38dp"
        android:layout_marginLeft="120dp"
        android:src="@drawable/nine" />

    <ImageView
        android:id="@+id/outerearBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/mainDiagramEar"
        android:layout_alignLeft="@id/mainDiagramEar"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="60dp"
        android:src="@drawable/ten" />

    <ImageView
        android:id="@+id/cochleaBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/mainDiagramEar"
        android:layout_alignRight="@id/mainDiagramEar"
        android:layout_marginBottom="115dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/six" />

    <ImageView
        android:id="@+id/eardrumBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/mainDiagramEar"
        android:layout_alignLeft="@id/mainDiagramEar"
        android:layout_marginBottom="95dp"
        android:layout_marginLeft="147dp"
        android:src="@drawable/eight" />

    <ImageView
        android:id="@+id/canalsBlb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@id/mainDiagramEar"
        android:layout_alignTop="@id/mainDiagramEar"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/four" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mainDiagramEar"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lesson_list"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >
        </ListView>
    </LinearLayout>

</RelativeLayout>