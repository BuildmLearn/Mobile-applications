<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadow_on" 
    android:id="@+id/popup_element">

    <TextView
        android:id="@+id/badge_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Champion Badge"
        android:textColor="#616161"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/badge_icon"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/badge_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/champion" />

    <TextView
        android:id="@+id/badge_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/badge_icon"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:text="badge details text can goes here. It can be soooooo long "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#616161" />

    <ImageView
        android:id="@+id/cancel_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="235dp"
        android:layout_marginStart="235dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/correct_btn" />
    
</RelativeLayout>
